<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/thread_item_background"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:text="This is just sample title. With a very long text wowowowo"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:layout_width="match_parent"
            android:textColor="@color/black87"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/creator"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="by huteri"
            android:textColor="@color/black55"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/category"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:layout_alignTop="@+id/creator"
            android:text="Category"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:textColor="@color/black55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/replies"
            android:text="200"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignTop="@+id/creator"
            android:layout_toRightOf="@+id/icon_post"
            android:layout_width="wrap_content"
            android:textColor="@color/black55"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon_post"
            android:layout_alignTop="@+id/creator"
            android:layout_centerHorizontal="true"
            android:paddingTop="7dp"
            android:src="@drawable/ic_num_replies"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </RelativeLayout>

</LinearLayout>